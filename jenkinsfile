pipeline {
   agent any
   environment {
       registry = "gatreya/repository_01"
       
   }
     stages {
   stage('Publish') {
           environment {
               registryCredential = 'dockerHub'
           }
           steps{
               script {
                   def appimage = docker.build registry + ":$BUILD_NUMBER"
                   docker.withRegistry( '', registryCredential ) {
                       appimage.push()
                       appimage.push('latest')
                   }
               }
           }
       }
       
       stage ('Deploy') {
       
           steps {
           def deployment = input(message: "is it new build? " , ok: "Button", parameters: [booleanParam(defaultVaalue:true,description: "just a button",name: "yes")])
           sh "scp -i deployment.yml service.yml /Gourav"
           sh "kubectl create -f deployment.yml"
            //   script{
              //     def image_id = registry + ":$BUILD_NUMBER"
               //    sh "ansible-playbook  playbook.yml --extra-vars \"image_id=${image_id}\""
            //   }
           }
       }
   }}
